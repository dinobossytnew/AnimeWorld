package mc.dinobossyt.epicpetsinventoy;

import java.util.List;

import org.bukkit.Bukkit;
import org.bukkit.ChatColor;
import org.bukkit.plugin.PluginDescriptionFile;
import org.bukkit.plugin.java.JavaPlugin;

import dinolib.dinobossyt.fosil.core.utilidades.ColorVariable;

public class EpicPetsInventory extends JavaPlugin{

	  PluginDescriptionFile pdf = getDescription();
	  public String rutaConfig;
	  public String prefix = ChatColor.translateAlternateColorCodes('&', "&7[&5Epic&dPets&bInventory&7] ");
	  public String V = pdf.getVersion();
	  public List<String> author = pdf.getAuthors();
	  
	  //todo lo que se tiene que activar
	  public void onEnable() {
		  Bukkit.getConsoleSender().sendMessage(ColorVariable.translate(prefix+"&aGracias por usar mi plugin @"+author));
	  
	  
	  }
	  //todo lo que se tiene que desactivar.
	  public void onDisable() {
		  
		  
		  
		  
	  }
}
